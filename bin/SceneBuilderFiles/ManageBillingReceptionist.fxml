<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="manageBillingAnchor" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SceneBuilderFiles.Controller.ManageBillingController" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0">
    <children>
        <!-- Top Navigation Bar with Back Arrow, Logo, and Centered Heading -->
        <HBox layoutX="0.0" layoutY="0.0" prefHeight="50.0" prefWidth="800.0" style="-fx-background-color: #DC582A;" alignment="CENTER">
            <children>
                <!-- Back Button on Left Corner -->
                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                    <image>
                        <Image url="@../images/back_button.png" />
                    </image>
                    <HBox.margin>
                        <Insets left="15.0" />
                    </HBox.margin>
                </ImageView>

                <!-- Spacer for Centering Heading -->
                <Region HBox.hgrow="ALWAYS" />

                <!-- Title Label for Managing Billing -->
                <Label text="Manage Billing" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>

                <!-- Spacer for Centering Heading -->
                <Region HBox.hgrow="ALWAYS" />

                <!-- Logo on Right Corner -->
                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/orenix1.png" />
                    </image>
                    <HBox.margin>
                        <Insets right="15.0" />
                    </HBox.margin>
                </ImageView>
            </children>
        </HBox>

        <!-- Patient Selection Section -->
        <VBox layoutX="50.0" layoutY="80.0" prefHeight="150.0" prefWidth="700.0" spacing="20.0">
            <Label text="Select Patient:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <!-- Patient selection (e.g., search bar or dropdown) -->
            <TableView fx:id="patientTableView" prefHeight="100.0" prefWidth="600.0">
                <columns>
                    <TableColumn fx:id="patientIdColumn" text="Patient ID" />
                    <TableColumn fx:id="patientNameColumn" text="Patient Name" />
                    <TableColumn fx:id="patientServicesColumn" text="Services Provided" />
                </columns>
            </TableView>
        </VBox>

        <!-- Bill Review Section -->
        <VBox layoutX="50.0" layoutY="280.0" prefHeight="150.0" prefWidth="700.0" spacing="20.0">
            <Label text="Bill Summary:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <TableView fx:id="billSummaryTable" prefHeight="100.0" prefWidth="600.0">
                <columns>
                    <TableColumn fx:id="serviceColumn" text="Service" />
                    <TableColumn fx:id="amountColumn" text="Amount" />
                </columns>
            </TableView>
        </VBox>

        <!-- Confirm and Dispute Options -->
        <VBox layoutX="50.0" layoutY="450.0" prefHeight="100.0" prefWidth="700.0" spacing="20.0">
            <Button fx:id="confirmBillButton" text="Confirm Bill" onAction="#handleConfirmBill" style="-fx-background-color: #DC582A; -fx-text-fill: white;"/>
            <Button fx:id="disputeBillButton" text="Dispute Bill" onAction="#handleDisputeBill" style="-fx-background-color: #DC582A; -fx-text-fill: white;"/>
        </VBox>

        <!-- Back Button -->
        <Button fx:id="backButton" text="Back to Dashboard" layoutX="650.0" layoutY="500.0" onAction="#goBackToDashboard" style="-fx-background-color: #DC582A; -fx-text-fill: white;"/>
    </children>
</AnchorPane>
