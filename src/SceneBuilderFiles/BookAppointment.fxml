<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Orange Bar for Centered Heading with Back Button and Logo -->
        <HBox layoutX="0.0" layoutY="0.0" prefHeight="58.0" prefWidth="800.0" style="-fx-background-color: #DC582A;" alignment="CENTER">
            <children>
                <!-- Back Button on Left Corner -->
                <ImageView fx:id="backButton" fitHeight="32.0" fitWidth="39.0" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;" onMouseClicked="#goBackToPatientPortal">
                    <image>
                        <Image url="@../images/back_button.png" />
                    </image>
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </ImageView>

                <!-- Spacer to Center Heading -->
                <Region HBox.hgrow="ALWAYS" />

                <!-- Heading Label -->
                <Label text="Appointments" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="30.0" />
                    </font>
                </Label>

                <!-- Spacer for Centering -->
                <Region HBox.hgrow="ALWAYS" />

                <!-- Logo -->
                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/orenix1.png" />
                    </image>
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </ImageView>
            </children>
        </HBox>

        <!-- Select Doctor Section -->
        <Label layoutX="30.0" layoutY="80.0" text="Select Doctor">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <ChoiceBox fx:id="doctorChoiceBox" layoutX="30.0" layoutY="105.0" prefWidth="200.0" />

        <!-- Select Time Slot Section -->
        <Label layoutX="30.0" layoutY="160.0" text="Select Time Slot">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <ChoiceBox fx:id="timeSlotChoiceBox" layoutX="30.0" layoutY="185.0" prefWidth="200.0" />

        <!-- Existing Appointments List -->
        <Label layoutX="300.0" layoutY="80.0" text="My Appointments">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <ListView fx:id="appointmentListView" layoutX="300.0" layoutY="105.0" prefHeight="250.0" prefWidth="450.0" />

        <!-- Buttons for Actions -->
        <Button fx:id="bookAppointmentButton" layoutX="30.0" layoutY="250.0" mnemonicParsing="false" text="Book Appointment" style="-fx-background-color: #DC582A; -fx-text-fill: white;" onAction="#handleBookAppointment" />
        <Button fx:id="rescheduleAppointmentButton" layoutX="150.0" layoutY="250.0" mnemonicParsing="false" text="Reschedule Appointment" style="-fx-background-color: #DC582A; -fx-text-fill: white;" onAction="#handleRescheduleAppointment" />
        <Button fx:id="cancelAppointmentButton" layoutX="320.0" layoutY="400.0" mnemonicParsing="false" text="Cancel Appointment" style="-fx-background-color: red; -fx-text-fill: white;" onAction="#handleCancelAppointment" />

        <!-- Notification Section -->
        <Label layoutX="30.0" layoutY="310.0" prefHeight="50.0" prefWidth="700.0" text="Notifications and Status Updates will appear here." style="-fx-background-color: #f4f4f4; -fx-border-color: lightgray;" />
    </children>
</AnchorPane>
