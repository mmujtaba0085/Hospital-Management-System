<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SceneBuilderFiles.Controller.AdminDashboardController">
    <children>
        <!-- Sidebar with collapsible sections for sub-options -->
        <VBox fx:id="sidebar" layoutX="0.0" layoutY="0.0" prefHeight="886.0" prefWidth="222.0" style="-fx-background-color: #e1722f;">
            <children>
                <Label prefHeight="48.0" prefWidth="228.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10px; -fx-background-color: #e1722f;" text="Doctor's Dashboard" />

                <!-- Home / Overview -->
                <Button onAction="#showOverview" prefHeight="26.0" prefWidth="228.0" text="Home / Overview" />

                <!-- Appointments Management with Sub-options -->
                <TitledPane alignment="TOP_CENTER" expanded="false" text="Appointments Management">
                    <content>
                        <VBox>
                            <Button onAction="#viewSchedule" text="View Schedule" />
                            <Button onAction="#rescheduleAppointments" text="Reschedule" />
                            <Button onAction="#cancelAppointments" text="Cancel Appointments" />
                        </VBox>
                    </content>
                </TitledPane>

                <!-- Personal List -->
                <Button alignment="TOP_CENTER" onAction="#viewPersonalDetails" prefHeight="26.0" prefWidth="252.0" text="View Personal Details" />
                
                <!-- Patient List -->
                <Button alignment="TOP_CENTER" onAction="#viewPatientList" prefHeight="26.0" prefWidth="252.0" text="View Patient List" />

                <!-- Doctor List -->
                <Button alignment="TOP_CENTER" onAction="#viewDoctorList" prefHeight="26.0" prefWidth="252.0" text="View Doctor List" />

                <!-- Prescriptions -->
                <Button alignment="TOP_CENTER" onAction="#openPrescriptions" prefHeight="26.0" prefWidth="252.0" text="Prescriptions" />

                <!-- Communication -->
                <Button alignment="TOP_CENTER" onAction="#openCommunication" prefHeight="26.0" prefWidth="250.0" text="Communication" />

                <!-- Billing and Payments -->
                <Button alignment="TOP_CENTER" onAction="#openBilling" prefHeight="26.0" prefWidth="234.0" text="Billing and Payments" />

                <!-- Analytics & Reports with Sub-options -->
                <TitledPane alignment="TOP_CENTER" expanded="false" text="Analytics and Reports">
                    <content>
                        <VBox>
                            <Button onAction="#generateReports" text="Generate Reports" />
                            <Button onAction="#downloadReports" text="Download Reports" />
                        </VBox>
                    </content>
                </TitledPane>

                <!-- Settings -->
                <Button alignment="TOP_CENTER" onAction="#openSettings" prefHeight="26.0" prefWidth="233.0" text="Settings" />

                <!-- Help & Support -->
                <Button alignment="TOP_CENTER" onAction="#openHelp" prefHeight="26.0" prefWidth="237.0" text="Help and Support" />
            </children>
        </VBox>

        <!-- Main Content Area -->
        <AnchorPane layoutX="222.0" layoutY="-8.0" prefHeight="886.0" prefWidth="681.0" style="-fx-background-color: #ffffff;">
            <children>
                <Label fx:id="mainContentTitle" layoutX="20.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Welcome to the Doctor's Dashboard" />
                    <!-- Dynamic content like TableView will be added here programmatically -->
            </children>
        </AnchorPane>



        <!-- Right Side Pane for Sub-options -->
        <Pane fx:id="subOptionPane" layoutX="636.0" layoutY="0.0" prefHeight="600.0" prefWidth="464.0" style="-fx-background-color: #f9f9f9;" visible="false">
            <children>
                <Label fx:id="subOptionTitle" layoutX="12.0" layoutY="10.0" prefHeight="27.0" prefWidth="102.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Sub-options" />
            </children>
        </Pane>
    </children>
</AnchorPane>
